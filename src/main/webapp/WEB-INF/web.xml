<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>com.epam.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>localization</filter-name>
        <filter-class>com.epam.web.localization.LocalizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>localization</filter-name>
        <servlet-name>Controller</servlet-name>
        <dispatcher>REQUEST</dispatcher>

    </filter-mapping>
    <filter>
        <filter-name>authorization</filter-name>
        <filter-class>com.epam.web.security.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>authorization</filter-name>
        <servlet-name>Controller</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <jsp-config>
        <taglib>
            <taglib-uri>/tld/SimpleErrorTag.tld</taglib-uri>
            <taglib-location>/tld/SimpleErrorTag.tld</taglib-location>
        </taglib>
    </jsp-config>
    <!-- JSTL Tag Library Local Descriptors -->
</web-app>
        